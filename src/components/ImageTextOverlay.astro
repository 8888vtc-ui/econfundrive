---
interface Props {
  image: string;
  alt: string;
  title?: string;
  text?: string;
  overlay?: boolean;
  height?: string;
}

const {
  image,
  alt,
  title,
  text,
  overlay = true,
  height = "400px"
} = Astro.props;
---

<div class="image-text-overlay" style={`height: ${height}`}>
  <div class="image-container">
    <img 
      src={image} 
      alt={alt}
      title={title || alt}
      loading="lazy"
      decoding="async"
      class="overlay-image"
    />
    {overlay && <div class="image-overlay"></div>}
  </div>
  {text && (
    <div class="text-overlay">
      <h2 class="overlay-title">{text}</h2>
    </div>
  )}
</div>

<style>
  .image-text-overlay {
    position: relative;
    width: 100%;
    overflow: hidden;
    border-radius: 12px;
    box-shadow: 0 10px 30px rgba(0, 0, 0, 0.5);
  }

  .image-container {
    position: relative;
    width: 100%;
    height: 100%;
  }

  .overlay-image {
    width: 100%;
    height: 100%;
    object-fit: cover;
    display: block;
  }

  .image-overlay {
    position: absolute;
    top: 0;
    left: 0;
    right: 0;
    bottom: 0;
    background: linear-gradient(
      to bottom,
      rgba(10, 10, 10, 0.3) 0%,
      rgba(10, 10, 10, 0.7) 100%
    );
    pointer-events: none;
  }

  .text-overlay {
    position: absolute;
    bottom: 0;
    left: 0;
    right: 0;
    padding: 2rem;
    z-index: 2;
  }

  .overlay-title {
    font-size: 2rem;
    font-weight: 700;
    color: #ffffff;
    margin: 0;
    text-shadow: 2px 2px 8px rgba(0, 0, 0, 0.8);
    line-height: 1.2;
  }

  @media (max-width: 768px) {
    .overlay-title {
      font-size: 1.5rem;
    }

    .text-overlay {
      padding: 1.5rem;
    }
  }
</style>

