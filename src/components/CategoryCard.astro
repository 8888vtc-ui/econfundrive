---
interface Props {
  image: string;
  alt: string;
  title: string;
  description: string;
  link: string;
  linkText?: string;
}

const {
  image,
  alt,
  title,
  description,
  link,
  linkText = "Découvrir"
} = Astro.props;
---

<div class="category-card">
  <div class="card-image-wrapper">
    <img 
      src={image} 
      alt={alt}
      loading="lazy"
      decoding="async"
      class="card-image"
    />
    <div class="card-overlay"></div>
  </div>
  <div class="card-content">
    <h3 class="card-title">{title}</h3>
    <p class="card-description">{description}</p>
    <a href={link} class="card-link">{linkText}</a>
  </div>
</div>

