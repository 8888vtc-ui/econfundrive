---
interface Props {
  image: string;
  alt: string;
  title: string;
  description: string;
  link: string;
  linkText?: string;
}

const {
  image,
  alt,
  title,
  description,
  link,
  linkText = "DÃ©couvrir"
} = Astro.props;
---

<div class="category-card">
  <div class="card-image-wrapper">
    <img 
      src={image} 
      alt={alt}
      loading="lazy"
      decoding="async"
      class="card-image"
    />
    <div class="card-overlay"></div>
  </div>
  <div class="card-content">
    <h3 class="card-title">{title}</h3>
    <p class="card-description">{description}</p>
    <a href={link} class="card-link">{linkText}</a>
  </div>
</div>

<style>
  .category-card {
    background: rgba(26, 26, 26, 0.8);
    border: 2px solid rgba(212, 175, 55, 0.2);
    border-radius: 12px;
    overflow: hidden;
    transition: transform 0.3s, border-color 0.3s, box-shadow 0.3s;
    height: 100%;
    display: flex;
    flex-direction: column;
  }

  .category-card:hover {
    transform: translateY(-5px);
    border-color: rgba(212, 175, 55, 0.5);
    box-shadow: 0 10px 30px rgba(212, 175, 55, 0.3);
  }

  .card-image-wrapper {
    position: relative;
    width: 100%;
    height: 250px;
    overflow: hidden;
  }

  .card-image {
    width: 100%;
    height: 100%;
    object-fit: cover;
    transition: transform 0.3s;
  }

  .category-card:hover .card-image {
    transform: scale(1.1);
  }

  .card-overlay {
    position: absolute;
    top: 0;
    left: 0;
    right: 0;
    bottom: 0;
    background: linear-gradient(
      to bottom,
      transparent 0%,
      rgba(10, 10, 10, 0.8) 100%
    );
    pointer-events: none;
  }

  .card-content {
    padding: 1.5rem;
    flex: 1;
    display: flex;
    flex-direction: column;
  }

  .card-title {
    font-size: 1.5rem;
    font-weight: 600;
    color: #d4af37;
    margin: 0 0 0.75rem 0;
  }

  .card-description {
    color: #e5e7eb;
    line-height: 1.6;
    margin: 0 0 1rem 0;
    flex: 1;
  }

  .card-link {
    display: inline-block;
    padding: 0.75rem 1.5rem;
    border: 2px solid rgba(212, 175, 55, 0.5);
    color: #d4af37;
    text-decoration: none;
    font-weight: 500;
    border-radius: 8px;
    transition: background 0.2s, border-color 0.2s;
    text-align: center;
  }

  .card-link:hover {
    background: rgba(212, 175, 55, 0.1);
    border-color: #d4af37;
  }
</style>

