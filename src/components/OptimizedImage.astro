---
// Composant Image optimis√© pour SEO et Performance 2025
interface Props {
  src: string;
  alt: string;
  width?: number;
  height?: number;
  loading?: 'lazy' | 'eager';
  class?: string;
  style?: string;
  fetchpriority?: 'high' | 'low' | 'auto';
}

const {
  src,
  alt,
  width = 800,
  height = 600,
  loading = 'lazy',
  class: className = '',
  style = '',
  fetchpriority = 'auto'
} = Astro.props;
---

<img
  src={src}
  alt={alt}
  width={width}
  height={height}
  loading={loading}
  decoding="async"
  fetchpriority={fetchpriority}
  class={className}
  style={style}
/>

<style>
  img {
    max-width: 100%;
    height: auto;
    display: block !important;
    visibility: visible !important;
  }

  @media (max-width: 768px) {
    img {
      display: block !important;
      visibility: visible !important;
      width: 100% !important;
      max-width: 100% !important;
    }
  }
</style>

