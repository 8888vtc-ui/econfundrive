---
// Composant Image optimisé pour SEO et Performance 2025
import { Image } from 'astro:assets';

interface Props {
  src: string;
  alt: string;
  width?: number;
  height?: number;
  loading?: 'lazy' | 'eager';
  class?: string;
  style?: string;
  fetchpriority?: 'high' | 'low' | 'auto';
  sizes?: string; // Pour srcset responsive
  quality?: number; // Qualité WebP (1-100)
  format?: 'webp' | 'avif' | 'png' | 'jpg';
}

const {
  src,
  alt,
  width = 800,
  height = 600,
  loading = 'lazy',
  class: className = '',
  style = '',
  fetchpriority = 'auto',
  sizes = '(max-width: 768px) 100vw, (max-width: 1200px) 50vw, 800px',
  quality = 85,
  format = 'webp'
} = Astro.props;

// Si src est une URL externe ou un chemin public, utiliser img classique
// Sinon, utiliser Astro Image pour l'optimisation
const isPublicPath = src.startsWith('/') || src.startsWith('http');
---

{isPublicPath ? (
  <picture>
    <source 
      srcset={`${src}?w=400&format=webp&quality=${quality} 400w, ${src}?w=800&format=webp&quality=${quality} 800w, ${src}?w=1200&format=webp&quality=${quality} 1200w`}
      type="image/webp"
      sizes={sizes}
    />
    <source 
      srcset={`${src}?w=400&format=avif&quality=${quality} 400w, ${src}?w=800&format=avif&quality=${quality} 800w, ${src}?w=1200&format=avif&quality=${quality} 1200w`}
      type="image/avif"
      sizes={sizes}
    />
    <img
      src={src}
      alt={alt}
      width={width}
      height={height}
      loading={loading}
      decoding="async"
      fetchpriority={fetchpriority}
      class={className}
      style={style}
      sizes={sizes}
      srcset={`${src}?w=400 400w, ${src}?w=800 800w, ${src}?w=1200 1200w`}
    />
  </picture>
) : (
  <img
    src={src}
    alt={alt}
    width={width}
    height={height}
    loading={loading}
    decoding="async"
    fetchpriority={fetchpriority}
    class={className}
    style={style}
  />
)}

<style>
  picture, img {
    max-width: 100%;
    height: auto;
    display: block;
  }
</style>
