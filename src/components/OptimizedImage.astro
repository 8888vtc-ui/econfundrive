---
// Composant Image optimis√© pour Astro
interface Props {
  src: string;
  alt: string;
  width?: number;
  height?: number;
  loading?: 'lazy' | 'eager';
  class?: string;
  style?: string;
  webp?: string; // Source WebP optionnelle
}

const {
  src,
  alt,
  width = 800,
  height = 600,
  loading = 'lazy',
  class: className = '',
  style = '',
  webp
} = Astro.props;

const hasWebP = webp || src.replace(/\.(jpg|jpeg|png)$/i, '.webp');
---

{webp || src.includes('.webp') ? (
  <picture>
    {webp && <source srcset={webp} type="image/webp" />}
    {!webp && src.includes('.webp') && <source srcset={src} type="image/webp" />}
    <img
      src={src}
      alt={alt}
      width={width}
      height={height}
      loading={loading}
      decoding="async"
      class={className}
      style={style}
    />
  </picture>
) : (
  <img
    src={src}
    alt={alt}
    width={width}
    height={height}
    loading={loading}
    decoding="async"
    class={className}
    style={style}
  />
)}

