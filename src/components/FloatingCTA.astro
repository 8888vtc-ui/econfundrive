---
// CTA flottant pour améliorer la conversion
---

<div class="floating-cta" id="floating-cta" role="complementary" aria-label="Actions rapides">
  <a href="/reservation" class="floating-cta-button" aria-label="Réserver un trajet VTC maintenant">
    <svg width="20" height="20" viewBox="0 0 24 24" fill="none" stroke="currentColor" stroke-width="2" aria-hidden="true">
      <path d="M9 11l3 3L22 4"></path>
      <path d="M21 12v7a2 2 0 01-2 2H5a2 2 0 01-2-2V5a2 2 0 012-2h11"></path>
    </svg>
    <span>Réserver maintenant</span>
  </a>
  <a href="tel:+33616552811" class="floating-cta-phone" aria-label="Appeler ECOFUNDRIVE au 06 16 55 28 11">
    <svg width="20" height="20" viewBox="0 0 24 24" fill="none" stroke="currentColor" stroke-width="2" aria-hidden="true">
      <path d="M22 16.92v3a2 2 0 01-2.18 2 19.79 19.79 0 01-8.63-3.07 19.5 19.5 0 01-6-6 19.79 19.79 0 01-3.07-8.67A2 2 0 014.11 2h3a2 2 0 012 1.72 12.84 12.84 0 00.7 2.81 2 2 0 01-.45 2.11L8.09 9.91a16 16 0 006 6l1.27-1.27a2 2 0 012.11-.45 12.84 12.84 0 002.81.7A2 2 0 0122 16.92z"></path>
    </svg>
    <span class="sr-only">Appeler</span>
  </a>
</div>

<style>
  .floating-cta {
    position: fixed;
    bottom: 100px;
    left: 20px;
    z-index: 9997;
    display: flex;
    flex-direction: column;
    gap: 12px;
    animation: slideInLeft 0.5s ease;
  }

  .floating-cta-button {
    background: linear-gradient(135deg, var(--luxe-gold, #d4af37), var(--luxe-gold-dark, #b8941f));
    color: var(--luxe-black, #0a0a0a);
    padding: 16px 24px;
    border-radius: 50px;
    font-weight: 600;
    text-transform: uppercase;
    letter-spacing: 1px;
    display: flex;
    align-items: center;
    gap: 10px;
    box-shadow: 0 8px 25px rgba(212, 175, 55, 0.4);
    transition: all 0.3s ease;
    text-decoration: none;
    font-size: 0.9rem;
  }

  .floating-cta-button:hover {
    transform: translateY(-3px);
    box-shadow: 0 12px 35px rgba(212, 175, 55, 0.5);
  }

  .floating-cta-phone {
    background: var(--luxe-black, #0a0a0a);
    color: var(--luxe-gold, #d4af37);
    width: 56px;
    height: 56px;
    border-radius: 50%;
    display: flex;
    align-items: center;
    justify-content: center;
    box-shadow: 0 4px 15px rgba(0, 0, 0, 0.3);
    transition: all 0.3s ease;
    text-decoration: none;
    border: 2px solid var(--luxe-gold, #d4af37);
  }

  .floating-cta-phone:hover {
    background: var(--luxe-gold, #d4af37);
    color: var(--luxe-black, #0a0a0a);
    transform: scale(1.1);
  }

  @keyframes slideInLeft {
    from {
      opacity: 0;
      transform: translateX(-100px);
    }
    to {
      opacity: 1;
      transform: translateX(0);
    }
  }

  @media (max-width: 768px) {
    .floating-cta {
      bottom: 80px;
      left: 15px;
    }

    .floating-cta-button {
      padding: 12px 18px;
      font-size: 0.8rem;
    }

    .floating-cta-button span {
      display: none;
    }

    .floating-cta-button::after {
      content: "Réserver";
    }
  }

  /* Masquer sur la page de réservation */
  body[data-page="reservation"] .floating-cta {
    display: none;
  }
</style>

<script>
  // Afficher/masquer selon le scroll
  let lastScroll = 0;
  const floatingCTA = document.getElementById('floating-cta');
  
  if (floatingCTA) {
    window.addEventListener('scroll', () => {
      const currentScroll = window.pageYOffset;
      
      if (currentScroll > 300) {
        floatingCTA.style.opacity = '1';
        floatingCTA.style.visibility = 'visible';
      } else {
        floatingCTA.style.opacity = '0.7';
      }
      
      lastScroll = currentScroll;
    });
  }
</script>

