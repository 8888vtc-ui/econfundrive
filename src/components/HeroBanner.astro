---
interface Props {
  image: string;
  alt: string;
  title: string;
  subtitle?: string;
  ctaText?: string;
  ctaLink?: string;
}

const {
  image,
  alt,
  title,
  subtitle,
  ctaText = "RÃ©server maintenant",
  ctaLink = "/reservation"
} = Astro.props;
---

<section class="hero-banner">
  <div class="hero-image-container">
    <img 
      src={image} 
      alt={alt}
      loading="eager"
      decoding="async"
      class="hero-background-image"
      fetchpriority="high"
    />
    <div class="hero-overlay"></div>
  </div>
  <div class="hero-content">
    <div class="container">
      <h1 class="hero-title">{title}</h1>
      {subtitle && <p class="hero-subtitle">{subtitle}</p>}
      {ctaLink && (
        <a href={ctaLink} class="hero-cta-button">{ctaText}</a>
      )}
    </div>
  </div>
</section>

<style>
  .hero-banner {
    position: relative;
    width: 100%;
    min-height: 500px;
    display: flex;
    align-items: center;
    justify-content: center;
    overflow: hidden;
  }

  .hero-image-container {
    position: absolute;
    top: 0;
    left: 0;
    width: 100%;
    height: 100%;
    z-index: 0;
  }

  .hero-background-image {
    width: 100%;
    height: 100%;
    object-fit: cover;
    display: block;
  }

  .hero-overlay {
    position: absolute;
    top: 0;
    left: 0;
    right: 0;
    bottom: 0;
    background: linear-gradient(
      135deg,
      rgba(10, 10, 10, 0.7) 0%,
      rgba(10, 10, 10, 0.5) 50%,
      rgba(10, 10, 10, 0.8) 100%
    );
    pointer-events: none;
  }

  .hero-content {
    position: relative;
    z-index: 2;
    width: 100%;
    text-align: center;
    padding: 3rem 1rem;
  }

  .hero-title {
    font-size: 3rem;
    font-weight: 700;
    color: #ffffff;
    margin: 0 0 1.5rem 0;
    text-shadow: 2px 2px 12px rgba(0, 0, 0, 0.9);
    line-height: 1.2;
  }

  .hero-subtitle {
    font-size: 1.25rem;
    color: #e5e7eb;
    margin: 0 0 2rem 0;
    text-shadow: 1px 1px 8px rgba(0, 0, 0, 0.8);
    line-height: 1.6;
    max-width: 800px;
    margin-left: auto;
    margin-right: auto;
  }

  .hero-cta-button {
    display: inline-block;
    padding: 1.25rem 3rem;
    background: linear-gradient(135deg, #d4af37, #b8941f);
    color: #0a0a0a;
    text-decoration: none;
    font-weight: 600;
    font-size: 1.1rem;
    border-radius: 8px;
    transition: transform 0.2s, box-shadow 0.2s;
    box-shadow: 0 4px 15px rgba(212, 175, 55, 0.4);
  }

  .hero-cta-button:hover {
    transform: translateY(-2px);
    box-shadow: 0 8px 25px rgba(212, 175, 55, 0.6);
  }

  @media (max-width: 768px) {
    .hero-banner {
      min-height: 400px;
    }

    .hero-title {
      font-size: 2rem;
    }

    .hero-subtitle {
      font-size: 1rem;
    }

    .hero-cta-button {
      padding: 1rem 2rem;
      font-size: 1rem;
    }
  }
</style>

