---
interface Props {
  image: string;
  alt: string;
  title: string;
  subtitle?: string;
  ctaText?: string;
  ctaLink?: string;
}

const {
  image,
  alt,
  title,
  subtitle,
  ctaText = "Réserver maintenant",
  ctaLink = "/reservation"
} = Astro.props;
---

<section class="hero-banner">
  <div class="hero-image-container">
    <img 
      src={image} 
      alt={alt}
      loading="eager"
      decoding="async"
      class="hero-background-image"
      fetchpriority="high"
    />
    <div class="hero-overlay"></div>
  </div>
  <div class="hero-content">
    <div class="container">
      <h1 class="hero-title">{title}</h1>
      {subtitle && <p class="hero-subtitle">{subtitle}</p>}
      {ctaLink && (
        <a href={ctaLink} class="hero-cta-button">{ctaText}</a>
      )}
    </div>
  </div>
</section>

