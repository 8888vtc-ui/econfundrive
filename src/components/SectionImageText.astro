---
interface Props {
  title: string;
  image: string;
  alt: string;
  imageSide?: 'left' | 'right';
  ctaText?: string;
  ctaLink?: string;
  id?: string;
}

const {
  title,
  image,
  alt,
  imageSide = 'left',
  ctaText,
  ctaLink,
  id
} = Astro.props;
---

<section class={`section-image-text ${imageSide === 'right' ? 'image-right' : ''}`} id={id}>
  <div>
    <div>
      <div>
        <img 
          src={image} 
          alt={alt}
        />
      </div>
      <div>
        <h2>{title}</h2>
        <div>
          <slot />
        </div>
        {ctaText && ctaLink && (
          <a href={ctaLink} class="cta-button">
            {ctaText}
          </a>
        )}
      </div>
    </div>
  </div>
</section>
