---
// Chatbot component with fixed avatar/graphics
---

<button class="chatbot-toggle" type="button" aria-label="Ouvrir l'assistant de réservation VTC" aria-expanded="false" aria-controls="chatbot-panel">
  <svg width="24" height="24" viewBox="0 0 24 24" fill="none" xmlns="http://www.w3.org/2000/svg">
    <path d="M12 2C6.48 2 2 6.48 2 12c0 1.54.36 2.98.97 4.29L1 23l6.71-1.97c1.31.61 2.75.97 4.29.97 5.52 0 10-4.48 10-10S17.52 2 12 2zm0 18c-1.38 0-2.67-.36-3.79-1.01L4 20l1.01-4.21C4.36 14.67 4 13.38 4 12c0-4.42 3.58-8 8-8s8 3.58 8 8-3.58 8-8 8z" fill="currentColor"/>
    <path d="M8 9h8v2H8V9zm0 4h6v2H8v-2z" fill="currentColor"/>
  </svg>
</button>

<div id="chatbot-panel" class="chatbot-panel" aria-label="Assistant de réservation VTC" role="dialog" aria-modal="true" aria-hidden="true">
  <div class="chatbot-header">
    <div class="chatbot-avatar">
      <svg width="40" height="40" viewBox="0 0 40 40" fill="none" xmlns="http://www.w3.org/2000/svg">
        <circle cx="20" cy="20" r="20" fill="#fbbf24"/>
        <circle cx="20" cy="16" r="6" fill="#0a0a0a"/>
        <path d="M10 30c0-5.5 4.5-10 10-10s10 4.5 10 10" fill="#0a0a0a"/>
      </svg>
    </div>
    <div class="chatbot-info">
      <h3>David – guide & chauffeur VTC</h3>
      <p>En ligne</p>
    </div>
    <button class="chatbot-close" type="button" aria-label="Fermer le chat">
      <svg width="20" height="20" viewBox="0 0 24 24" fill="none" stroke="currentColor" stroke-width="2">
        <line x1="18" y1="6" x2="6" y2="18"></line>
        <line x1="6" y1="6" x2="18" y2="18"></line>
      </svg>
    </button>
  </div>
  <div class="chatbot-body">
    <div class="chatbot-messages">
      <div class="chat-msg bot first-message">
        <div class="chat-msg-content">
          Bonjour, je suis David, votre chauffeur privé et guide web sur la Côte d'Azur. Posez une question à votre guide (trajet, visite, conseil) ou indiquez d'où vous partez, votre destination, la date, l'heure et le nombre de passagers.
        </div>
      </div>
    </div>
  </div>
  <form class="chatbot-footer chatbot-form" aria-label="Formulaire de chat">
    <label for="chatbot-input" class="sr-only">Votre message</label>
    <input 
      id="chatbot-input"
      class="chatbot-input" 
      type="text" 
      placeholder="Ex. Nice aéroport → Monaco demain 18h, 2 personnes" 
      autocomplete="off"
      aria-label="Tapez votre message"
      aria-required="true">
    <button type="submit" class="chatbot-send" aria-label="Envoyer le message">
      <svg width="20" height="20" viewBox="0 0 24 24" fill="none" stroke="currentColor" stroke-width="2" aria-hidden="true">
        <line x1="22" y1="2" x2="11" y2="13"></line>
        <polygon points="22 2 15 22 11 13 2 9 22 2"></polygon>
      </svg>
    </button>
  </form>
</div>

<script>
  // Chatbot functionality
  const chatbotToggle = document.querySelector(".chatbot-toggle");
  const chatbotPanel = document.querySelector(".chatbot-panel");
  const chatbotForm = document.querySelector(".chatbot-form");
  const chatbotInput = document.querySelector(".chatbot-input");
  const chatbotMessages = document.querySelector(".chatbot-messages");
  const chatbotClose = document.querySelector(".chatbot-close");

  const chatState = {
    isOpen: false,
    firstInteraction: true,
    isTyping: false,
    chatHistory: []
  };

  if (chatbotToggle && chatbotPanel) {
    chatbotToggle.addEventListener("click", (e) => {
      e.preventDefault();
      toggleChat();
    });

    if (chatbotClose) {
      chatbotClose.addEventListener("click", () => {
        toggleChat(false);
      });
    }

    document.addEventListener('click', (e) => {
      if (chatState.isOpen && 
          !chatbotPanel.contains(e.target) && 
          !chatbotToggle.contains(e.target)) {
        toggleChat(false);
      }
    });
  }

  function toggleChat(forceState = null) {
    chatState.isOpen = forceState !== null ? forceState : !chatState.isOpen;
    
    if (chatState.isOpen) {
      chatbotPanel.classList.add("open");
      chatbotPanel.setAttribute("aria-hidden", "false");
      chatbotToggle.classList.add("active");
      chatbotToggle.setAttribute("aria-expanded", "true");
      
      if (chatState.firstInteraction) {
        setTimeout(() => {
          const firstMsg = chatbotMessages.querySelector('.first-message');
          if (firstMsg) {
            firstMsg.classList.add('visible');
            firstMsg.style.opacity = '1';
            firstMsg.style.transform = 'translateY(0)';
          }
          chatState.firstInteraction = false;
        }, 300);
      }
      
      setTimeout(() => {
        if (chatbotInput) chatbotInput.focus();
      }, 100);
    } else {
      chatbotPanel.classList.remove("open");
      chatbotPanel.setAttribute("aria-hidden", "true");
      chatbotToggle.classList.remove("active");
      chatbotToggle.setAttribute("aria-expanded", "false");
    }
  }

  if (chatbotForm && chatbotInput) {
    chatbotForm.addEventListener("submit", async (e) => {
      e.preventDefault();
      const content = chatbotInput.value.trim();
      
      if (!content || chatState.isTyping) return;
      
      appendMessage('user', content);
      chatbotInput.value = '';
      
      chatState.isTyping = true;
      
      try {
        const controller = new AbortController();
        const timeoutId = setTimeout(() => controller.abort(), 30000); // Timeout 30s
        
        const response = await fetch("/.netlify/functions/deepseek-chat", {
          method: "POST",
          headers: { "Content-Type": "application/json" },
          body: JSON.stringify({ message: content }),
          signal: controller.signal
        });
        
        clearTimeout(timeoutId);

        if (!response.ok) {
          const errorData = await response.json().catch(() => ({}));
          throw new Error(errorData.error || `Erreur HTTP ${response.status}`);
        }
        const data = await response.json();
        const answer = data.answer || "Je suis désolé, je n'ai pas pu générer de réponse pour le moment. Pouvez-vous reformuler votre question ?";
        appendMessage("bot", answer);
      } catch (error) {
        if (import.meta.env.DEV) {
          console.error("Erreur chatbot:", error);
        }
        // Message d'erreur plus informatif avec gestion améliorée
        let errorMessage = "Une erreur s'est produite. ";
        if (error.name === 'AbortError' || error.message?.includes('timeout')) {
          errorMessage += "La requête a pris trop de temps. Veuillez réessayer.";
        } else if (error.message?.includes("Failed to fetch") || error.message?.includes("network")) {
          errorMessage += "Vérifiez votre connexion internet.";
        } else if (error.message?.includes("500")) {
          errorMessage += "Le service est temporairement indisponible. Veuillez réessayer plus tard.";
        } else {
          errorMessage += "Pour toute question, contactez-nous directement au 06 16 55 28 11 ou via WhatsApp.";
        }
        appendMessage("bot", errorMessage);
      } finally {
        chatState.isTyping = false;
      }
    });
  }

  function appendMessage(role, text) {
    if (!chatbotMessages) return;
    
    const div = document.createElement("div");
    div.className = `chat-msg ${role}`;
    
    const textNode = document.createElement('div');
    textNode.className = 'chat-msg-content';
    textNode.textContent = text;
    div.appendChild(textNode);
    
    chatbotMessages.appendChild(div);
    div.scrollIntoView({ behavior: 'smooth', block: 'end' });
    
    if (role === 'bot') {
      div.classList.add('typing');
      setTimeout(() => div.classList.remove('typing'), 100);
    }
    
    chatState.chatHistory.push({ role, text, timestamp: new Date() });
  }
</script>

<style>
  .chatbot-toggle {
    position: fixed;
    bottom: 25px;
    right: 25px;
    width: 60px;
    height: 60px;
    border-radius: 50%;
    background: linear-gradient(135deg, var(--accent-gold), #b8860b);
    box-shadow: 0 5px 15px rgba(0,0,0,0.3);
    border: none;
    cursor: pointer;
    z-index: 9999;
    transition: transform 0.2s;
    display: flex;
    align-items: center;
    justify-content: center;
    color: var(--primary-black);
  }

  .chatbot-toggle:hover {
    transform: scale(1.1) translateY(-3px);
    box-shadow: 0 8px 20px rgba(0,0,0,0.25);
  }

  .chatbot-toggle.active {
    background: linear-gradient(135deg, #b8860b, var(--accent-gold));
  }

  .chatbot-panel {
    position: fixed;
    bottom: 100px;
    right: 25px;
    width: 350px;
    max-width: calc(100vw - 50px);
    max-height: 500px;
    background: var(--bg-card);
    border: 1px solid rgba(251, 191, 36, 0.2);
    border-radius: 15px;
    box-shadow: 0 10px 30px rgba(0,0,0,0.5);
    z-index: 9998;
    display: none;
    flex-direction: column;
    overflow: hidden;
    transform: translateY(20px);
    opacity: 0;
    visibility: hidden;
    transition: all 0.3s ease;
  }

  .chatbot-panel.open {
    display: flex;
    transform: translateY(0);
    opacity: 1;
    visibility: visible;
  }

  .chatbot-header {
    background: var(--bg-dark);
    padding: 15px 20px;
    display: flex;
    align-items: center;
    border-bottom: 1px solid rgba(255, 255, 255, 0.1);
    gap: 12px;
  }

  .chatbot-avatar {
    width: 40px;
    height: 40px;
    border-radius: 50%;
    overflow: hidden;
    background: var(--accent-gold);
    display: flex;
    align-items: center;
    justify-content: center;
    flex-shrink: 0;
  }

  .chatbot-avatar svg {
    width: 100%;
    height: 100%;
  }

  .chatbot-info {
    flex-grow: 1;
  }

  .chatbot-info h3 {
    color: var(--text-light);
    font-size: 1rem;
    margin: 0 0 2px 0;
    font-weight: 600;
  }

  .chatbot-info p {
    color: var(--accent-gold);
    font-size: 0.8rem;
    margin: 0;
    display: flex;
    align-items: center;
  }

  .chatbot-info p::before {
    content: '●';
    color: #4ade80;
    font-size: 1.2rem;
    margin-right: 5px;
  }

  .chatbot-close {
    background: none;
    border: none;
    color: var(--text-gray);
    cursor: pointer;
    padding: 5px;
    display: flex;
    align-items: center;
    justify-content: center;
    transition: color 0.2s;
  }

  .chatbot-close:hover {
    color: var(--accent-gold);
  }

  .chatbot-body {
    flex: 1;
    overflow: hidden;
    display: flex;
    flex-direction: column;
  }

  .chatbot-messages {
    flex: 1;
    overflow-y: auto;
    padding: 20px;
    background: var(--bg-card);
    scroll-behavior: smooth;
  }

  .chat-msg {
    margin-bottom: 15px;
    max-width: 80%;
    animation: fadeIn 0.3s ease-out;
  }

  .chat-msg.first-message {
    opacity: 0;
    transform: translateY(10px);
    transition: opacity 0.3s ease, transform 0.3s ease;
  }

  .chat-msg.first-message.visible {
    opacity: 1;
    transform: translateY(0);
  }

  .chat-msg.user {
    margin-left: auto;
  }

  .chat-msg.bot {
    margin-right: auto;
  }

  .chat-msg-content {
    padding: 12px 16px;
    border-radius: 18px;
    font-size: 0.9rem;
    line-height: 1.4;
    word-wrap: break-word;
  }

  .chat-msg.user .chat-msg-content {
    background: var(--accent-gold);
    color: var(--bg-dark);
    border-bottom-right-radius: 4px;
    font-weight: 500;
  }

  .chat-msg.bot .chat-msg-content {
    background: rgba(255, 255, 255, 0.1);
    color: var(--text-light);
    border-bottom-left-radius: 4px;
  }

  .chatbot-footer {
    padding: 12px 15px;
    background: var(--bg-card);
    border-top: 1px solid rgba(255, 255, 255, 0.1);
    display: flex;
    gap: 8px;
  }

  .chatbot-input {
    flex: 1;
    background: var(--bg-dark);
    border: 1px solid rgba(255, 255, 255, 0.1);
    border-radius: 20px;
    padding: 10px 15px;
    color: var(--text-light);
    font-size: 0.9rem;
  }

  .chatbot-input:focus {
    outline: none;
    border-color: var(--accent-gold);
  }

  .chatbot-send {
    background: var(--accent-gold);
    color: var(--primary-black);
    border: none;
    border-radius: 50%;
    width: 40px;
    height: 40px;
    display: flex;
    align-items: center;
    justify-content: center;
    cursor: pointer;
    transition: transform 0.2s;
  }

  .chatbot-send:hover {
    transform: scale(1.1);
  }

  @keyframes fadeIn {
    from {
      opacity: 0;
      transform: translateY(5px);
    }
    to {
      opacity: 1;
      transform: translateY(0);
    }
  }

  @media (max-width: 768px) {
    .chatbot-panel {
      width: calc(100vw - 20px);
      right: 10px;
      bottom: 80px;
      max-height: calc(100vh - 100px);
    }

    .chatbot-toggle {
      bottom: 20px;
      right: 20px;
      width: 56px;
      height: 56px;
    }
  }
</style>

