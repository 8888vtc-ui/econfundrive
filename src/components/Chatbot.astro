---
// Chatbot optimisé - Nouvelle version sans bugs
---

<button 
  class="chatbot-toggle" 
  type="button" 
  aria-label="Ouvrir l'assistant de réservation VTC" 
  aria-expanded="false" 
  aria-controls="chatbot-panel"
  id="chatbot-toggle-btn">
  <svg width="24" height="24" viewBox="0 0 24 24" fill="none" xmlns="http://www.w3.org/2000/svg" aria-hidden="true">
    <path d="M12 2C6.48 2 2 6.48 2 12c0 1.54.36 2.98.97 4.29L1 23l6.71-1.97c1.31.61 2.75.97 4.29.97 5.52 0 10-4.48 10-10S17.52 2 12 2zm0 18c-1.38 0-2.67-.36-3.79-1.01L4 20l1.01-4.21C4.36 14.67 4 13.38 4 12c0-4.42 3.58-8 8-8s8 3.58 8 8-3.58 8-8 8z" fill="currentColor"/>
    <path d="M8 9h8v2H8V9zm0 4h6v2H8v-2z" fill="currentColor"/>
  </svg>
</button>

<div 
  id="chatbot-panel" 
  class="chatbot-panel" 
  aria-label="Assistant de réservation VTC" 
  role="dialog" 
  aria-modal="true" 
  aria-hidden="true">
  
  <div class="chatbot-header">
    <div class="chatbot-avatar" aria-hidden="true">
      <svg width="40" height="40" viewBox="0 0 40 40" fill="none" xmlns="http://www.w3.org/2000/svg">
        <circle cx="20" cy="20" r="20" fill="#d4af37"/>
        <circle cx="20" cy="16" r="6" fill="#0a0a0a"/>
        <path d="M10 30c0-5.5 4.5-10 10-10s10 4.5 10 10" fill="#0a0a0a"/>
      </svg>
    </div>
    <div class="chatbot-info">
      <h3>David – guide & chauffeur VTC</h3>
      <p class="chatbot-status">En ligne</p>
    </div>
    <button class="chatbot-close" type="button" aria-label="Fermer le chat" id="chatbot-close-btn">
      <svg width="20" height="20" viewBox="0 0 24 24" fill="none" stroke="currentColor" stroke-width="2" aria-hidden="true">
        <line x1="18" y1="6" x2="6" y2="18"></line>
        <line x1="6" y1="6" x2="18" y2="18"></line>
      </svg>
    </button>
  </div>
  
  <div class="chatbot-body">
    <div class="chatbot-messages" id="chatbot-messages" role="log" aria-live="polite">
      <div class="chat-msg bot first-message" data-role="bot">
        <div class="chat-msg-content">
          Bonjour, je suis David, votre chauffeur privé et guide sur la Côte d'Azur. Posez une question ou indiquez votre trajet (départ, destination, date, heure, passagers) pour une estimation rapide.
        </div>
      </div>
    </div>
  </div>
  
  <form class="chatbot-footer chatbot-form" aria-label="Formulaire de chat" id="chatbot-form">
    <label for="chatbot-input" class="sr-only">Votre message</label>
    <input 
      id="chatbot-input"
      class="chatbot-input" 
      type="text" 
      placeholder="Ex. Nice aéroport → Monaco demain 18h, 2 personnes" 
      autocomplete="off"
      aria-label="Tapez votre message"
      aria-required="true"
      required>
    <button type="submit" class="chatbot-send" aria-label="Envoyer le message" id="chatbot-send-btn">
      <svg width="20" height="20" viewBox="0 0 24 24" fill="none" stroke="currentColor" stroke-width="2" aria-hidden="true">
        <line x1="22" y1="2" x2="11" y2="13"></line>
        <polygon points="22 2 15 22 11 13 2 9 22 2"></polygon>
      </svg>
    </button>
  </form>
  
  <div class="chatbot-typing-indicator" id="typing-indicator" aria-hidden="true" style="display: none;">
    <span></span><span></span><span></span>
  </div>
</div>

<script>
  (function() {
    'use strict';
    
    // Éléments DOM
    const chatbotToggle = document.getElementById('chatbot-toggle-btn');
    const chatbotPanel = document.getElementById('chatbot-panel');
    const chatbotForm = document.getElementById('chatbot-form');
    const chatbotInput = document.getElementById('chatbot-input');
    const chatbotMessages = document.getElementById('chatbot-messages');
    const chatbotClose = document.getElementById('chatbot-close-btn');
    const typingIndicator = document.getElementById('typing-indicator');
    
    // État du chatbot
    const chatState = {
      isOpen: false,
      isTyping: false,
      messageId: 0
    };
    
    // Charger l'historique depuis localStorage
    function loadHistory() {
      try {
        const saved = localStorage.getItem('ecofundrive-chat-history');
        if (saved) {
          const history = JSON.parse(saved);
          // Ne charger que les 10 derniers messages
          const recentHistory = history.slice(-10);
          recentHistory.forEach(msg => {
            if (msg.role && msg.text) {
              appendMessageToDOM(msg.role, msg.text, false);
            }
          });
        }
      } catch (e) {
        // Ignorer les erreurs de localStorage
      }
    }
    
    // Sauvegarder l'historique dans localStorage
    function saveMessage(role, text) {
      try {
        const saved = localStorage.getItem('ecofundrive-chat-history') || '[]';
        const history = JSON.parse(saved);
        history.push({ role, text, timestamp: Date.now() });
        // Garder seulement les 20 derniers messages
        const recentHistory = history.slice(-20);
        localStorage.setItem('ecofundrive-chat-history', JSON.stringify(recentHistory));
      } catch (e) {
        // Ignorer les erreurs de localStorage
      }
    }
    
    // Ouvrir/fermer le chatbot
    function toggleChat(forceState = null) {
      chatState.isOpen = forceState !== null ? forceState : !chatState.isOpen;
      
      if (chatState.isOpen) {
        chatbotPanel.classList.add('open');
        chatbotPanel.setAttribute('aria-hidden', 'false');
        chatbotToggle.setAttribute('aria-expanded', 'true');
        chatbotToggle.classList.add('active');
        
        // Charger l'historique si c'est la première ouverture
        if (chatbotMessages.children.length === 1) {
          loadHistory();
        }
        
        // Focus sur l'input
        setTimeout(() => {
          if (chatbotInput) chatbotInput.focus();
        }, 100);
      } else {
        chatbotPanel.classList.remove('open');
        chatbotPanel.setAttribute('aria-hidden', 'true');
        chatbotToggle.setAttribute('aria-expanded', 'false');
        chatbotToggle.classList.remove('active');
      }
    }
    
    // Afficher/masquer l'indicateur de frappe
    function showTyping(show) {
      if (typingIndicator) {
        typingIndicator.style.display = show ? 'flex' : 'none';
        typingIndicator.setAttribute('aria-hidden', show ? 'false' : 'true');
      }
    }
    
    // Ajouter un message au DOM
    function appendMessageToDOM(role, text, save = true) {
      if (!chatbotMessages) return;
      
      // Supprimer l'indicateur de frappe s'il existe
      showTyping(false);
      
      const messageDiv = document.createElement('div');
      messageDiv.className = `chat-msg ${role}`;
      messageDiv.setAttribute('data-role', role);
      messageDiv.setAttribute('data-id', `msg-${++chatState.messageId}`);
      
      const contentDiv = document.createElement('div');
      contentDiv.className = 'chat-msg-content';
      contentDiv.textContent = text;
      messageDiv.appendChild(contentDiv);
      
      chatbotMessages.appendChild(messageDiv);
      
      // Scroll vers le bas
      messageDiv.scrollIntoView({ behavior: 'smooth', block: 'end' });
      
      // Sauvegarder le message
      if (save) {
        saveMessage(role, text);
      }
      
      return messageDiv;
    }
    
    // Envoyer un message
    async function sendMessage(message) {
      if (!message || chatState.isTyping) return;
      
      // Afficher le message de l'utilisateur
      appendMessageToDOM('user', message);
      chatbotInput.value = '';
      
      // Afficher l'indicateur de frappe
      chatState.isTyping = true;
      showTyping(true);
      
      try {
        const controller = new AbortController();
        const timeoutId = setTimeout(() => controller.abort(), 25000);
        
        const response = await fetch('/.netlify/functions/deepseek-chat', {
          method: 'POST',
          headers: { 'Content-Type': 'application/json' },
          body: JSON.stringify({ message }),
          signal: controller.signal
        });
        
        clearTimeout(timeoutId);
        
        if (!response.ok) {
          const errorData = await response.json().catch(() => ({}));
          throw new Error(errorData.error || `Erreur HTTP ${response.status}`);
        }
        
        const data = await response.json();
        const answer = data.answer || getFallbackMessage(message);
        
        // Supprimer l'indicateur et afficher la réponse
        showTyping(false);
        appendMessageToDOM('bot', answer);
        
      } catch (error) {
        showTyping(false);
        
        let errorMsg = "Désolé, une erreur s'est produite. ";
        
        if (error.name === 'AbortError') {
          errorMsg += "La requête a pris trop de temps. Veuillez réessayer.";
        } else if (error.message?.includes('Failed to fetch') || error.message?.includes('network')) {
          errorMsg += "Vérifiez votre connexion internet.";
        } else {
          errorMsg += "Contactez-moi directement au 06 16 55 28 11 ou via WhatsApp.";
        }
        
        appendMessageToDOM('bot', errorMsg);
      } finally {
        chatState.isTyping = false;
        if (chatbotInput) chatbotInput.focus();
      }
    }
    
    // Message de fallback intelligent
    function getFallbackMessage(userMessage) {
      const lower = userMessage.toLowerCase();
      
      if (lower.includes('prix') || lower.includes('tarif') || lower.includes('coût')) {
        return "Pour un devis précis, précisez : départ, arrivée, date, heure et nombre de passagers. Consultez aussi notre page Tarifs ou appelez-moi au 06 16 55 28 11.";
      } else if (lower.includes('réserv') || lower.includes('book')) {
        return "Pour réserver, utilisez notre formulaire de réservation ou contactez-moi au 06 16 55 28 11 / WhatsApp. Réservation minimum 4h à l'avance.";
      } else if (lower.includes('aéroport') || lower.includes('airport')) {
        return "Je propose des transferts depuis les aéroports de Nice (NCE) et Cannes-Mandelieu vers toute la Côte d'Azur. Réservez au moins 4h à l'avance.";
      } else if (lower.includes('nice') || lower.includes('cannes') || lower.includes('monaco') || lower.includes('saint-tropez')) {
        return "Je couvre toute la Côte d'Azur : Nice, Cannes, Monaco, Saint-Tropez, Fréjus, Sainte-Maxime. Dites-moi votre trajet précis pour un devis !";
      } else {
        return "Je peux vous aider pour vos trajets, transferts aéroport et conseils sur la Côte d'Azur. Contactez-moi au 06 16 55 28 11 ou utilisez notre formulaire de réservation.";
      }
    }
    
    // Event listeners
    if (chatbotToggle) {
      chatbotToggle.addEventListener('click', (e) => {
        e.preventDefault();
        toggleChat();
      });
    }
    
    if (chatbotClose) {
      chatbotClose.addEventListener('click', () => {
        toggleChat(false);
      });
    }
    
    if (chatbotForm) {
      chatbotForm.addEventListener('submit', async (e) => {
        e.preventDefault();
        const message = chatbotInput?.value?.trim();
        if (message) {
          await sendMessage(message);
        }
      });
    }
    
    // Fermer en cliquant à l'extérieur
    document.addEventListener('click', (e) => {
      if (chatState.isOpen && 
          chatbotPanel && 
          !chatbotPanel.contains(e.target) && 
          chatbotToggle && 
          !chatbotToggle.contains(e.target)) {
        toggleChat(false);
      }
    });
    
    // Support clavier (Escape pour fermer)
    document.addEventListener('keydown', (e) => {
      if (e.key === 'Escape' && chatState.isOpen) {
        toggleChat(false);
      }
    });
  })();
</script>

<style>
  .chatbot-toggle {
    position: fixed;
    bottom: 25px;
    right: 25px;
    width: 60px;
    height: 60px;
    border-radius: 50%;
    background: linear-gradient(135deg, #d4af37, #b8941f);
    box-shadow: 0 5px 15px rgba(0,0,0,0.3);
    border: none;
    cursor: pointer;
    z-index: 9999;
    transition: transform 0.2s, box-shadow 0.2s;
    display: flex;
    align-items: center;
    justify-content: center;
    color: #0a0a0a;
  }

  .chatbot-toggle:hover {
    transform: scale(1.1) translateY(-3px);
    box-shadow: 0 8px 20px rgba(0,0,0,0.4);
  }

  .chatbot-toggle.active {
    background: linear-gradient(135deg, #b8941f, #d4af37);
  }

  .chatbot-panel {
    position: fixed;
    bottom: 100px;
    right: 25px;
    width: 380px;
    max-width: calc(100vw - 50px);
    max-height: 600px;
    background: rgba(26, 26, 26, 0.98);
    backdrop-filter: blur(20px);
    border: 2px solid rgba(212, 175, 55, 0.3);
    border-radius: 16px;
    box-shadow: 0 10px 40px rgba(0,0,0,0.6);
    z-index: 9998;
    display: none;
    flex-direction: column;
    overflow: hidden;
    transform: translateY(20px) scale(0.95);
    opacity: 0;
    visibility: hidden;
    transition: all 0.3s cubic-bezier(0.4, 0, 0.2, 1);
  }

  .chatbot-panel.open {
    display: flex;
    transform: translateY(0) scale(1);
    opacity: 1;
    visibility: visible;
  }

  .chatbot-header {
    background: rgba(10, 10, 10, 0.95);
    padding: 16px 20px;
    display: flex;
    align-items: center;
    border-bottom: 2px solid rgba(212, 175, 55, 0.2);
    gap: 12px;
  }

  .chatbot-avatar {
    width: 45px;
    height: 45px;
    border-radius: 50%;
    overflow: hidden;
    background: linear-gradient(135deg, #d4af37, #b8941f);
    display: flex;
    align-items: center;
    justify-content: center;
    flex-shrink: 0;
    box-shadow: 0 0 15px rgba(212, 175, 55, 0.4);
  }

  .chatbot-info {
    flex-grow: 1;
  }

  .chatbot-info h3 {
    color: #ffffff;
    font-size: 1rem;
    margin: 0 0 4px 0;
    font-weight: 600;
  }

  .chatbot-status {
    color: #d4af37;
    font-size: 0.85rem;
    margin: 0;
    display: flex;
    align-items: center;
  }

  .chatbot-status::before {
    content: '●';
    color: #4ade80;
    font-size: 1rem;
    margin-right: 6px;
    animation: pulse 2s infinite;
  }

  @keyframes pulse {
    0%, 100% { opacity: 1; }
    50% { opacity: 0.5; }
  }

  .chatbot-close {
    background: none;
    border: none;
    color: #9ca3af;
    cursor: pointer;
    padding: 8px;
    display: flex;
    align-items: center;
    justify-content: center;
    transition: color 0.2s, transform 0.2s;
    border-radius: 4px;
  }

  .chatbot-close:hover {
    color: #d4af37;
    transform: rotate(90deg);
  }

  .chatbot-body {
    flex: 1;
    overflow: hidden;
    display: flex;
    flex-direction: column;
    background: rgba(26, 26, 26, 0.95);
  }

  .chatbot-messages {
    flex: 1;
    overflow-y: auto;
    overflow-x: hidden;
    padding: 20px;
    scroll-behavior: smooth;
  }

  .chatbot-messages::-webkit-scrollbar {
    width: 6px;
  }

  .chatbot-messages::-webkit-scrollbar-track {
    background: rgba(255, 255, 255, 0.05);
  }

  .chatbot-messages::-webkit-scrollbar-thumb {
    background: rgba(212, 175, 55, 0.3);
    border-radius: 3px;
  }

  .chat-msg {
    margin-bottom: 16px;
    max-width: 85%;
    animation: fadeInUp 0.3s ease-out;
    word-wrap: break-word;
  }

  .chat-msg.user {
    margin-left: auto;
    margin-right: 0;
  }

  .chat-msg.bot {
    margin-right: auto;
    margin-left: 0;
  }

  .chat-msg-content {
    padding: 12px 16px;
    border-radius: 18px;
    font-size: 0.9rem;
    line-height: 1.5;
    word-wrap: break-word;
    white-space: pre-wrap;
  }

  .chat-msg.user .chat-msg-content {
    background: linear-gradient(135deg, #d4af37, #b8941f);
    color: #0a0a0a;
    border-bottom-right-radius: 4px;
    font-weight: 500;
  }

  .chat-msg.bot .chat-msg-content {
    background: rgba(255, 255, 255, 0.1);
    color: #ffffff;
    border-bottom-left-radius: 4px;
  }

  .chatbot-footer {
    padding: 12px 16px;
    background: rgba(10, 10, 10, 0.95);
    border-top: 2px solid rgba(212, 175, 55, 0.2);
    display: flex;
    gap: 10px;
    align-items: center;
  }

  .chatbot-input {
    flex: 1;
    background: rgba(26, 26, 26, 0.8);
    border: 1px solid rgba(212, 175, 55, 0.3);
    border-radius: 24px;
    padding: 10px 16px;
    color: #ffffff;
    font-size: 0.9rem;
    transition: border-color 0.2s;
  }

  .chatbot-input:focus {
    outline: none;
    border-color: #d4af37;
    box-shadow: 0 0 0 3px rgba(212, 175, 55, 0.1);
  }

  .chatbot-input::placeholder {
    color: #9ca3af;
  }

  .chatbot-send {
    background: linear-gradient(135deg, #d4af37, #b8941f);
    color: #0a0a0a;
    border: none;
    border-radius: 50%;
    width: 44px;
    height: 44px;
    display: flex;
    align-items: center;
    justify-content: center;
    cursor: pointer;
    transition: transform 0.2s, box-shadow 0.2s;
    flex-shrink: 0;
  }

  .chatbot-send:hover:not(:disabled) {
    transform: scale(1.1);
    box-shadow: 0 0 15px rgba(212, 175, 55, 0.5);
  }

  .chatbot-send:disabled {
    opacity: 0.6;
    cursor: not-allowed;
  }

  .chatbot-typing-indicator {
    display: none;
    padding: 12px 20px;
    gap: 6px;
    align-items: center;
  }

  .chatbot-typing-indicator span {
    width: 8px;
    height: 8px;
    border-radius: 50%;
    background: #d4af37;
    animation: typing 1.4s infinite;
  }

  .chatbot-typing-indicator span:nth-child(2) {
    animation-delay: 0.2s;
  }

  .chatbot-typing-indicator span:nth-child(3) {
    animation-delay: 0.4s;
  }

  @keyframes typing {
    0%, 60%, 100% {
      transform: translateY(0);
      opacity: 0.7;
    }
    30% {
      transform: translateY(-10px);
      opacity: 1;
    }
  }

  @keyframes fadeInUp {
    from {
      opacity: 0;
      transform: translateY(10px);
    }
    to {
      opacity: 1;
      transform: translateY(0);
    }
  }

  .sr-only {
    position: absolute;
    width: 1px;
    height: 1px;
    padding: 0;
    margin: -1px;
    overflow: hidden;
    clip: rect(0, 0, 0, 0);
    white-space: nowrap;
    border-width: 0;
  }

  @media (max-width: 768px) {
    .chatbot-panel {
      width: calc(100vw - 20px);
      right: 10px;
      bottom: 80px;
      max-height: calc(100vh - 100px);
    }

    .chatbot-toggle {
      bottom: 20px;
      right: 20px;
      width: 56px;
      height: 56px;
    }
  }
</style>
