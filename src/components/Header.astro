---
import Logo from './Logo.astro';

interface Props {
  currentPage?: string;
}

const { currentPage = "" } = Astro.props;
---

<!-- HEADER DESKTOP -->
<header class="site-header">
  <div class="container navbar">
    <div class="nav-brand">
      <a href="/" class="nav-brand-link" aria-label="ECOFUNDRIVE - Retour Ã  l'accueil">
        <Logo />
      </a>
    </div>
    
    <!-- Menu Desktop -->
    <nav class="nav-links-desktop" aria-label="Navigation principale">
      <a href="/" class={currentPage === "index" ? "active" : ""}>Accueil</a>
      <a href="/services" class={currentPage === "services" ? "active" : ""}>Services</a>
      <a href="/a-propos" class={currentPage === "a-propos" ? "active" : ""}>Qui nous sommes</a>
      <a href="/contact" class={currentPage === "contact" ? "active" : ""}>Contact</a>
    </nav>
  </div>
</header>

<!-- BOTTOM NAVIGATION MOBILE -->
<nav class="bottom-nav" aria-label="Navigation mobile">
  <a href="/" class={`bottom-nav-item ${currentPage === "index" ? "active" : ""}`}>
    <svg viewBox="0 0 24 24" fill="none" stroke="currentColor" stroke-width="2">
      <path d="M3 9l9-7 9 7v11a2 2 0 0 1-2 2H5a2 2 0 0 1-2-2z"></path>
      <polyline points="9 22 9 12 15 12 15 22"></polyline>
    </svg>
    <span>Accueil</span>
  </a>
  <a href="/services" class={`bottom-nav-item ${currentPage === "services" ? "active" : ""}`}>
    <svg viewBox="0 0 24 24" fill="none" stroke="currentColor" stroke-width="2">
      <rect x="3" y="3" width="7" height="7"></rect>
      <rect x="14" y="3" width="7" height="7"></rect>
      <rect x="14" y="14" width="7" height="7"></rect>
      <rect x="3" y="14" width="7" height="7"></rect>
    </svg>
    <span>Services</span>
  </a>
  <a href="/contact" class={`bottom-nav-item ${currentPage === "contact" ? "active" : ""}`}>
    <svg viewBox="0 0 24 24" fill="none" stroke="currentColor" stroke-width="2">
      <path d="M22 16.92v3a2 2 0 0 1-2.18 2 19.79 19.79 0 0 1-8.63-3.07 19.5 19.5 0 0 1-6-6 19.79 19.79 0 0 1-3.07-8.67A2 2 0 0 1 4.11 2h3a2 2 0 0 1 2 1.72 12.84 12.84 0 0 0 .7 2.81 2 2 0 0 1-.45 2.11L8.09 9.91a16 16 0 0 0 6 6l1.27-1.27a2 2 0 0 1 2.11-.45 12.84 12.84 0 0 0 2.81.7A2 2 0 0 1 22 16.92z"></path>
    </svg>
    <span>Contact</span>
  </a>
</nav>
