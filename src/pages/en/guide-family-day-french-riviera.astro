---
import BaseLayout from '../../layouts/BaseLayout.astro';

const title = "Family Day French Riviera Guide | ECOFUNDRIVE";
const description = "Complete guide for a family day on the French Riviera. Family-friendly activities, beaches, attractions, and transportation tips.";
const keywords = [
  'family day French Riviera',
  'family activities Côte d\'Azur',
  'family beaches Nice',
  'kids activities Monaco',
  'family transport French Riviera'
];
---

<BaseLayout 
  title={title}
  description={description}
  currentPage="guide-family-day-french-riviera"
>
  <main class="page-content">
    <div class="container">
      <h1>{title}</h1>
      <p>{description}</p>
      
      <section>
        <h2>Family Activities</h2>
        <p>Discover the best family-friendly activities on the French Riviera.</p>
      </section>

      <section>
        <h2>Booking</h2>
        <div class="contact-buttons">
          <a href="tel:+33616552811" class="btn btn-primary">+33 6 16 55 28 11</a>
          <a href="https://wa.me/33616552811" class="btn btn-outline" target="_blank" rel="noopener">WhatsApp</a>
        </div>
      </section>
    </div>
  </main>
</BaseLayout>

<style>
  .page-content {
    padding: var(--spacing-3xl) 0;
  }

  .contact-buttons {
    display: flex;
    gap: var(--spacing-md);
    margin-top: var(--spacing-lg);
  }
</style>
