---
import BaseLayout from '../../layouts/BaseLayout.astro';

const title = "Nice Airport to Monaco Transfer | ECOFUNDRIVE";
const description = "Professional transfer service from Nice Airport to Monaco. Private driver VTC for comfortable and punctual transfers between Nice Airport and Monaco.";
const keywords = [
  'Nice airport Monaco transfer',
  'Nice Monaco VTC',
  'airport transfer Monaco',
  'Nice Côte d\'Azur airport',
  'Monaco private driver'
];
---

<BaseLayout 
  title={title}
  description={description}
  currentPage="nice-airport-to-monaco-transfer"
>
  <main class="page-content">
    <div class="container">
      <h1>{title}</h1>
      <p>{description}</p>
      
      <section>
        <h2>Transfer Service</h2>
        <p>Professional transfer from Nice Airport (NCE) to Monaco with private driver.</p>
      </section>

      <section>
        <h2>Booking</h2>
        <div class="contact-buttons">
          <a href="tel:+33616552811" class="btn btn-primary">+33 6 16 55 28 11</a>
          <a href="https://wa.me/33616552811" class="btn btn-outline" target="_blank" rel="noopener">WhatsApp</a>
        </div>
      </section>
    </div>
  </main>
</BaseLayout>

<style>
  .page-content {
    padding: var(--spacing-3xl) 0;
  }

  .contact-buttons {
    display: flex;
    gap: var(--spacing-md);
    margin-top: var(--spacing-lg);
  }
</style>
