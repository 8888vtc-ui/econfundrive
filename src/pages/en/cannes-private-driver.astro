---
import BaseLayout from '../../layouts/BaseLayout.astro';

const title = "Cannes Private Driver | ECOFUNDRIVE";
const description = "Private driver service in Cannes. Professional VTC chauffeur for transfers, events, and business trips in Cannes and the French Riviera.";
const keywords = [
  'Cannes private driver',
  'VTC Cannes',
  'chauffeur Cannes',
  'private driver French Riviera',
  'Cannes transport'
];
---

<BaseLayout 
  title={title}
  description={description}
  currentPage="cannes-private-driver"
>
  <main class="page-content">
    <div class="container">
      <h1>{title}</h1>
      <p>{description}</p>
      
      <section>
        <h2>Booking</h2>
        <div class="contact-buttons">
          <a href="tel:+33616552811" class="btn btn-primary">+33 6 16 55 28 11</a>
          <a href="https://wa.me/33616552811" class="btn btn-outline" target="_blank" rel="noopener">WhatsApp</a>
        </div>
      </section>
    </div>
  </main>
</BaseLayout>

<style>
  .page-content {
    padding: var(--spacing-3xl) 0;
  }

  .contact-buttons {
    display: flex;
    gap: var(--spacing-md);
    margin-top: var(--spacing-lg);
  }
</style>
