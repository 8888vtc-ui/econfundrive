---
import BaseLayout from '../layouts/BaseLayout.astro';

const title = "Guide Circulation Côte d'Azur Haute Saison | ECOFUNDRIVE";
const description = "Guide pratique sur la circulation en haute saison sur la Côte d'Azur. Conseils pour éviter les embouteillages, meilleurs horaires, alternatives de transport.";
const keywords = [
  'circulation Côte d\'Azur',
  'embouteillages Côte d\'Azur',
  'haute saison transport',
  'éviter embouteillages',
  'VTC haute saison'
];
---

<BaseLayout 
  title={title}
  description={description}
  currentPage="guide-circulation-cote-d-azur-haute-saison"
  breadcrumbItems={[
    { name: "Accueil", url: "/" },
    { name: "Guides", url: "/guides" },
    { name: "Circulation Haute Saison", url: "/guide-circulation-cote-d-azur-haute-saison" }
  ]}
>
  <main class="guide-page">
    <div class="container">
      <article>
        <h1>{title}</h1>
        <p class="guide-intro">{description}</p>

        <section>
          <h2>Circulation en Haute Saison</h2>
          <p>
            En haute saison (juillet-août), la circulation sur la Côte d'Azur peut être très dense. 
            Un <strong>chauffeur privé VTC</strong> connaît les itinéraires alternatifs pour éviter les embouteillages.
          </p>
        </section>

        <section>
          <h2>Conseils</h2>
          <ul>
            <li>Évitez les heures de pointe (8h-10h, 17h-19h)</li>
            <li>Prévoyez du temps supplémentaire pour vos déplacements</li>
            <li>Utilisez un <strong>chauffeur privé VTC</strong> qui connaît les raccourcis</li>
          </ul>
        </section>

        <section>
          <h2>Réservation</h2>
          <div class="contact-buttons">
            <a href="tel:+33616552811" class="btn btn-primary">06 16 55 28 11</a>
            <a href="https://wa.me/33616552811" class="btn btn-outline" target="_blank" rel="noopener">WhatsApp</a>
          </div>
        </section>
      </article>
    </div>
  </main>
</BaseLayout>

<style>
  .guide-page {
    padding: var(--spacing-3xl) 0;
  }

  .guide-intro {
    font-size: var(--font-size-lg);
    margin-bottom: var(--spacing-xl);
  }

  .contact-buttons {
    display: flex;
    gap: var(--spacing-md);
    margin-top: var(--spacing-lg);
  }
</style>
