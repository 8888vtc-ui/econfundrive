---
import BaseLayout from '../layouts/BaseLayout.astro';
import ReviewsSchema from '../components/ReviewsSchema.astro';
import { allReviews } from '../data/reviews.ts';

const title = "Avis Clients | ECOFUNDRIVE – Chauffeur Privé VTC Côte d'Azur";
const description = "Découvrez les avis de nos clients satisfaits. ECOFUNDRIVE : 5.0/5 avec 26 avis vérifiés. Chauffeur privé professionnel, ponctuel et attentionné sur la Côte d'Azur.";
const keywords = [
  'avis clients',
  'témoignages VTC',
  'chauffeur privé avis',
  'VTC Côte d\'Azur avis',
  'transfert aéroport Nice avis',
  'ECOFUNDRIVE avis'
];

const breadcrumbItems = [
  { name: "Accueil", url: "/" },
  { name: "Avis Clients", url: "/avis-clients" }
];
---

<BaseLayout 
  title={title}
  description={description}
  keywords={keywords}
  currentPage="avis-clients"
  canonical="/avis-clients"
  breadcrumbItems={breadcrumbItems}
>
  <ReviewsSchema reviews={allReviews} />
  
  <main class="page-content">
    <div class="container">
      <section class="reviews-hero">
        <h1>Avis Clients ECOFUNDRIVE</h1>
        <p class="lead">Découvrez ce que nos clients disent de nos services de chauffeur privé VTC sur la Côte d'Azur</p>
        
        <div class="rating-summary">
          <div class="rating-display">
            <div class="rating-stars">★★★★★</div>
            <div class="rating-value">5.0 / 5.0</div>
            <div class="rating-count">26 avis vérifiés</div>
            <div class="rating-source">
              <span>Source : </span>
              <a href="https://www.trustindex.io/reviews/ecofundrive.com" target="_blank" rel="noopener noreferrer" class="trustindex-link">
                Trustindex
              </a>
            </div>
          </div>
        </div>
        
        <div class="cta-review">
          <p>Vous avez utilisé nos services ? Partagez votre expérience !</p>
          <a href="https://www.trustindex.io/reviews/ecofundrive.com" target="_blank" rel="noopener noreferrer" class="btn btn-primary">
            Laisser un avis sur Trustindex
          </a>
        </div>
      </section>

      <section class="reviews-grid">
        <h2>Tous nos avis clients</h2>
        <div class="reviews-list">
          {allReviews.map((review) => (
            <article class="review-card">
              <div class="review-header">
                <div class="review-author">
                  <strong>{review.author}</strong>
                </div>
                <div class="review-date">
                  {new Date(review.datePublished).toLocaleDateString('fr-FR', { 
                    year: 'numeric', 
                    month: 'long', 
                    day: 'numeric' 
                  })}
                </div>
              </div>
              <div class="review-rating">
                {'★'.repeat(review.rating)}
              </div>
              <div class="review-body">
                <p>{review.reviewBody}</p>
              </div>
            </article>
          ))}
        </div>
      </section>

      <section class="reviews-cta">
        <h2>Pourquoi nos clients nous font confiance</h2>
        <div class="trust-points">
          <div class="trust-point">
            <strong>Ponctualité</strong>
            <p>Nous garantissons une arrivée à l'heure convenue, que ce soit pour un transfert aéroport ou un rendez-vous professionnel.</p>
          </div>
          <div class="trust-point">
            <strong>Professionnalisme</strong>
            <p>Nos chauffeurs sont expérimentés, courtois et connaissent parfaitement la région de la Côte d'Azur.</p>
          </div>
          <div class="trust-point">
            <strong>Véhicules premium</strong>
            <p>Une flotte de véhicules haut de gamme, propres et confortables pour tous vos déplacements.</p>
          </div>
          <div class="trust-point">
            <strong>Service 24/7</strong>
            <p>Disponible 24 heures sur 24, 7 jours sur 7, pour répondre à tous vos besoins de transport.</p>
          </div>
        </div>
      </section>

      <section class="contact-section">
        <h2>Réservez votre chauffeur privé</h2>
        <p>Rejoignez nos clients satisfaits et réservez dès maintenant votre transfert VTC sur la Côte d'Azur.</p>
        <div class="contact-buttons">
          <a href="tel:+33616552811" class="btn btn-primary">Appeler : 06 16 55 28 11</a>
          <a href="https://wa.me/33616552811" class="btn btn-outline" target="_blank" rel="noopener">WhatsApp</a>
        </div>
      </section>
    </div>
  </main>
</BaseLayout>


