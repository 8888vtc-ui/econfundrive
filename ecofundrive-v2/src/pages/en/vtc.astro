// ECOFUNDRIVE V2.0 - CATEGORY INDEX: VTC (EN)
// ‚ïê‚ïê‚ïê‚ïê‚ïê‚ïê‚ïê‚ïê‚ïê‚ïê‚ïê‚ïê‚ïê‚ïê‚ïê‚ïê‚ïê‚ïê‚ïê‚ïê‚ïê‚ïê‚ïê‚ïê‚ïê‚ïê‚ïê‚ïê‚ïê‚ïê‚ïê‚ïê‚ïê‚ïê‚ïê‚ïê‚ïê‚ïê‚ïê‚ïê‚ïê‚ïê‚ïê‚ïê‚ïê‚ïê‚ïê‚ïê‚ïê‚ïê‚ïê‚ïê‚ïê‚ïê‚ïê‚ïê‚ïê‚ïê‚ïê

import PageLayout from '../../layouts/PageLayout.astro';
import Hero from '../../components/Hero.astro';
import Breadcrumb from '../../components/Breadcrumb.astro';
import ContentSection from '../../components/ContentSection.astro';
import CTA from '../../components/CTA.astro';
import Schemas from '../../components/Schemas.astro';

import { filterByCategory, getCategorySlug } from '../../lib/keywords';

const lang = 'en';
const category = 'vtc';
const categorySlug = getCategorySlug(category, lang);

const vtcPages = filterByCategory(lang, category);
const sortedVtc = vtcPages.sort((a, b) => {
  if (a.authority !== b.authority) return b.authority ? 1 : -1;
  return a.location.localeCompare(b.location);
});

const breadcrumbs = [
  { label: 'Home', href: '/en' },
  { label: 'VTC Services' }
];
---

<PageLayout
  title="Premium Tesla VTC French Riviera | Private Driver"
  metaTitle="Tesla VTC French Riviera | Monaco, Nice, Cannes, Saint-Tropez"
  metaDescription="Premium Tesla VTC service on the French Riviera. Electric private driver for Monaco, Nice, Cannes, Saint-Tropez. Airport transfers, events, tourism. 24/7 booking."
  lang={lang}
  canonical={`https://ecofundrive.com/en/${categorySlug}`}
>
  <Hero
    title="Premium Tesla VTC Services"
    subtitle={`Discover our ${sortedVtc.length} Tesla private driver services on the French Riviera. 100% electric premium transport.`}
    image="/images/hero/shared/homepage-riviera-1920w.webp"
  />

  <Breadcrumb items={breadcrumbs} lang={lang} />

  <ContentSection alignment="center">
    <h2>All Our VTC Services</h2>
    <p style="font-size: 1.1rem; max-width: 800px; margin: 0 auto;">
      Airport transfers, business travel, tourist outings. 
      Discover all our Tesla private driver services on the French Riviera.
    </p>
  </ContentSection>

  <ContentSection>
    <div style="display: grid; grid-template-columns: repeat(auto-fill, minmax(320px, 1fr)); gap: 2rem; margin-top: 2rem;">
      {sortedVtc.map((service) => (
        <a 
          href={`/${service.language}/${service.keyword}`}
          class="category-card"
        >
          <div style="display: flex; align-items: center; gap: 0.5rem; margin-bottom: 1rem;">
            <span style="font-size: 0.85rem; padding: 0.25rem 0.75rem; background: {service.mode === 'B' ? 'var(--accent)' : 'var(--accent-blue)'}; color: white; border-radius: 4px; font-weight: 600;">
              {service.mode === 'B' ? 'BOOKING' : 'GUIDE'}
            </span>
            {service.authority && (
              <span style="font-size: 0.85rem; color: #FFD700;" title="Authority page">‚≠ê</span>
            )}
          </div>
          
          <h3 style="font-size: 1.2rem; margin-bottom: 0.75rem; color: var(--text); line-height: 1.3;">
            {service.keyword.replace(/-/g, ' ').replace(/\b\w/g, l => l.toUpperCase())}
          </h3>
          
          <p style="font-size: 0.95rem; color: var(--text-muted); margin-bottom: 1rem; flex-grow: 1;">
            üìç {service.location}
          </p>
          
          <div style="font-size: 0.9rem; color: var(--accent); font-weight: 600;">
            {service.mode === 'B' ? 'Book now ‚Üí' : 'Learn more ‚Üí'}
          </div>
        </a>
      ))}
    </div>
  </ContentSection>

  <CTA
    title="Need a Tesla driver now?"
    subtitle="Quick and easy booking via WhatsApp. 24/7 service available throughout the French Riviera."
    location="end"
    lang={lang}
  />

  <Schemas
    type="collection"
    data={{
      items: sortedVtc,
      title: "Premium Tesla VTC French Riviera | Private Driver",
      description: "Premium Tesla VTC service on the French Riviera. Electric private driver for all your travels.",
      url: `${siteConfig.siteUrl}/en/${categorySlug}`
    }}
  />

  <Schemas type="organization" />

  <Schemas
    type="breadcrumb"
    data={{ breadcrumbs }}
  />
</PageLayout>

<style>
  .category-card {
    background: white;
    padding: 2rem;
    border-radius: 12px;
    border: 1px solid var(--border);
    text-decoration: none;
    color: inherit;
    transition: transform 0.2s, box-shadow 0.2s;
    display: flex;
    flex-direction: column;
  }
  
  .category-card:hover {
    transform: translateY(-4px);
    box-shadow: 0 8px 16px rgba(0,0,0,0.1);
  }
</style>
